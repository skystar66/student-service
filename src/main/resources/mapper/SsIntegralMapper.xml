<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tengyue360.dao.SsIntegralMapper">

    <resultMap id="integralAsSLesson" type="com.tengyue360.web.requestModel.IntegralRequestModel">
        <result property="name" column="name"/>
        <result property="value" column="value"/>
        <result property="startTime" column="start_time"/>
    </resultMap>

    <select id="integralRecord" resultMap="integralAsSLesson">
       SELECT
            c. NAME ,i.VALUE,c.start_time
          FROM
        (
            SELECT
                sum(VALUE)
            VALUE , lesson_id , student_id ,source
            FROM
                ss_c_integral
            GROUP BY
                lesson_id ,
                student_id ,
                source
            HAVING
                student_id = #{userId}
        ) i
        JOIN ss_c_lesson c ON i.lesson_id = c.id
    </select>

    <select id="selectByUsrId" resultType="integer">
        SELECT sum(value)
        FROM ss_c_integral
        where student_id=#{userId}
    </select>
</mapper>